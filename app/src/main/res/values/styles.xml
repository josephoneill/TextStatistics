<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/colorDarkBackground</item>
        <item name="colorCardBackground">@color/colorPrimary</item>
        <item name="colorText">@color/white</item>
        <item name="colorTextAccent">@color/text_silver</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLightTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLightTheme</item>
        <item name="colorAccent">@color/colorAccentLightTheme</item>
        <item name="colorBackground">@color/colorLightBackground</item>
        <item name="colorCardBackground">@color/white</item>
        <item name="colorText">@color/black</item>
        <item name="colorTextAccent">@color/text_silver</item>
    </style>

</resources>
